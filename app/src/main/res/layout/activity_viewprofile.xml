<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        tools:context="com.tristenallen.watersource.controller.EditProfileActivity"
        >

        <TextView
            android:text="@string/user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/WelcomeTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

        <TextView
            android:text="@string/all_user_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/PleaseTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:layout_below="@+id/WelcomeTXT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <Button android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="#f3f3f3"
            android:text="@string/edit"
            android:visibility="visible"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:onClick="onEditPressed" />

        <Button
            android:text="@string/back"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="#f3f3f3"
            android:visibility="visible"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="46dp"
            android:onClick="onBackPressed" />

        <TextView
            android:text="@string/account_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accInfoTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/addresstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressTXT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:id="@+id/showaddressTXT" />

        <TextView
            android:text="@string/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shownameTXT"
            android:layout_above="@+id/accInfoTXT"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp" />

        <TextView
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:id="@+id/nameTXT"
            android:textSize="12sp"
            android:layout_above="@+id/shownameTXT"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp" />

        <TextView
            android:text="@string/personal_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personalTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:layout_above="@+id/nameTXT"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp" />

        <TextView
            android:text="@string/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:id="@+id/addressTXT"
            android:textSize="12sp"
            android:layout_below="@+id/accInfoTXT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:id="@+id/emailTXT"
            android:textSize="12sp"
            android:layout_below="@+id/showaddressTXT"
            android:layout_alignEnd="@+id/nameTXT"
            android:layout_marginTop="15dp" />

        <TextView
            android:text="@string/emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/showemailTXT"
            android:layout_below="@+id/emailTXT"
            android:layout_alignStart="@+id/emailTXT" />


    </RelativeLayout>

