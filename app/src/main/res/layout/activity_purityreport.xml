


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        tools:context="com.tristenallen.watersource.controller.EditProfileActivity"
        >

        <TextView
            android:text="@string/enter_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/enterTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:layout_below="@+id/purityTXT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:text="@string/water_purity_submission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/purityTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />


        <TextView
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/locationTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:layout_below="@+id/enterTXT"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/virus_ppm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:id="@+id/virusPPMTXT"
            android:layout_below="@+id/longitudeTXT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

        <EditText android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="@string/latitude"
            android:background="#f3f3f3"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/latitudeTXT"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/locationTXT"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#f3f3f3"
            android:inputType="textPersonName"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/longitude"
            android:id="@+id/longitudeTXT"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/latitudeTXT"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/waterCondition"
            android:background="#f3f3f3"
            android:layout_marginBottom="21dp"
            android:layout_above="@+id/submitButton"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="#f3f3f3"
            android:text="@string/source"
            android:visibility="visible"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:id="@+id/sourceReportButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />

        <Button android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:background="#f3f3f3"
            android:text="@string/submit"
            android:visibility="visible"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:id="@+id/submitButton"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/contaminantPPMTXT" />

        <TextView
            android:text="@string/contaminant_ppm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:id="@+id/contaminantPPMTXT"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/virusPPM"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f3f3f3"
            android:inputType="textPersonName"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/contaminant_ppm"
            android:id="@+id/contaminantPPM"
            android:layout_above="@+id/waterConditionTXT"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="@string/waterCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waterConditionTXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:layout_marginBottom="11dp"
            android:layout_above="@+id/waterCondition"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f3f3f3"
            android:inputType="textPersonName"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:hint="@string/virus_ppm"
            android:id="@+id/virusPPM"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/virusPPMTXT"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


